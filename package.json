{
  "name": "@twyzle/tz-cropperjs",
  "private": false,
  "version": "0.0.2",
  "description": "A simple Vue 3 component wrapper for the Cropper.js library",
  "type": "module",
  "main": "./dist/tz-cropperjs.umd.js",
  "module": "./dist/tz-cropperjs.es.js",
  "types": "./dist/tz-cropperjs.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tz-cropperjs.d.ts",
      "import": "./dist/tz-cropperjs.es.js",
      "require": "./dist/tz-cropperjs.umd.js"
    },
    "./dist/tz-cropperjs.css": "./dist/tz-cropperjs.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:example": "vite build example --outDir ../example-dist",
    "dev": "vite example",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "cropper",
    "cropperjs",
    "image-cropper",
    "image-editor",
    "vue-image-cropper",
    "typescript"
  ],
  "author": "Pablo pablo@twyzle.com",
  "license": "MIT",
  "dependencies": {
    "cropperjs": "^2.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/node": "^24.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.1.10",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.18",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twyzle/tz-cropperjs.git"
  },
  "bugs": {
    "url": "https://github.com/twyzle/tz-cropperjs/issues"
  },
  "homepage": "https://github.com/twyzle/tz-cropperjs#readme"
}
